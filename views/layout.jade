!!! 5
html
  head
    title HoneyComb
    
    // include default stylesheets and any view stylesheets
    link(rel='stylesheet', href='/stylesheets/style.css')
    
    // include default scripts and any view scripts
    script(src='/javascripts/jquery-1.7.min.js')
    script(src='/javascripts/modernizr.js')
    
  body
    header
      div(class='content-wrapper')
        div(class="float-left")
          p(class="site-title")
            img(src='/images/logo2.png')
        div(class="float-right")
          section#login
            ul
            -if( typeof(user) == 'undefined')
                li
                    a(href="/login") Log in
                li
                    a(href="/register") Register
            
            -else
                li Welcome !{user.username}!
                li 
                    a(href="/logout") Logout
          nav
            ul#menu
              li 
                a(href="/") Home
              li
                a(href="/about") About
    #body
      block content
      
    footer
      div(class="content-wrapper")
        div(class="float-left")
          p &copy; !{(new Date()).getFullYear()} SPSU HoneyComb